<tr>
  <td class="align-middle">
    <%= link_to test.title, 
                admin_test_path(test), 
                class: "test-title", 
                data: { test_id: test.id } %>
    <%= render 'form_inline', test: test = @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.category.title %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= test.completed  %></td>
  <td class="align-middle">
    <%= link_to t('admin.edit'), 
        edit_admin_test_path(test),
        data: { test_id: test.id }, 
        class: "form-inline-link" %>
    </td>
  <td class="align-middle">
    <%= link_to t('admin.delete'),
        admin_test_path(test),
        method: :delete,
        data: { confirm: t('.delete_message') } %> 
  </td>
  <% if !test.complete %>
    <td class="align-middle">
      <%= link_to t('admin.complete'),
          update_publish_admin_test_path(test),
          method: :patch,
          data: { confirm: t('.publish_message') } %> 
    </td>
  <% end %>
</tr>
