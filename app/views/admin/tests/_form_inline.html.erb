<%= form_with model: [:admin, test], 
              url: update_inline_admin_test_path(test), 
              local: true, 
              class: 'form-inline hide',
              data: { test_id: test.id } do |form| %>
  <%= form.text_field :title, class: "form-control mb-2 title w-50" %>
  <%= form.submit t('admin.enter'), class: "btn btn-primary" %>
<% end %>
