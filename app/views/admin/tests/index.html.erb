<h2><%= t('.header') %></h2>

<%= render 'shared/errors', resource: @test %>

<table class="table mt-4">
  <thead>
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.questions') %></th>
      <th><%= t('.published') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <%= render @tests %>
</table>

<div class="mt-4">
  <%= link_to t('.new'), new_admin_test_path, class: "btn btn-primary" %>
</div>
